<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape>
            <solid android:color="@color/md_divider"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <!-- BUTTON -->
    <item android:bottom="2px">
        <shape>
            <padding android:bottom="3dp"/>
            <gradient
                    android:startColor="@color/md_red_200"
                    android:endColor="@color/md_red_200"
                    android:angle="90" />
            <corners
                    android:radius="3dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>

</layer-list>