<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>


            <!-- BUTTON -->
            <item android:bottom="2px">
                <shape>
                    <padding android:bottom="3dp"/>
                    <gradient
                            android:startColor="@color/md_orange_800"
                            android:endColor="@color/md_orange_800"
                            android:angle="90" />
                    <corners
                            android:radius="5dp"/>

                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>


            <!-- BUTTON -->
            <item android:bottom="2px">
                <shape>
                    <padding android:bottom="3dp"/>
                    <gradient
                            android:endColor="@color/md_deep_orange_300"
                            android:startColor="@color/md_deep_orange_300"

                            android:angle="270" />
                    <corners
                            android:radius="5dp"/>

                </shape>
            </item>
        </layer-list>
    </item>
</selector>