<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>


            <!-- BUTTON -->
            <item android:bottom="2px">
                <shape>
                    <padding android:bottom="3dp"/>
                    <gradient
                            android:startColor="@color/md_text_white"
                            android:endColor="@color/md_text_white"
                            android:angle="90" />


                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>


            <!-- BUTTON -->
            <item android:bottom="2px">
                <shape>
                    <padding android:bottom="3dp"/>
                    <gradient
                            android:endColor="@color/md_deep_purple_500_50"
                            android:startColor="@color/md_deep_purple_500_50"

                            android:angle="270" />

                </shape>
            </item>
        </layer-list>
    </item>
</selector>