<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:background="@color/md_text_white_87"
              android:id="@+id/menu_layout">

        <LinearLayout android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="vertical"
                     android:background="@color/md_divider"
                     android:id="@+id/menu_maincontent">


                        <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:id="@+id/dashboard">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="200dp"

                              android:layout_marginBottom="5dp"
                              android:orientation="horizontal"
                              android:padding="0dp"
                              >


                    <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/img_1"
                            android:src="@drawable/ts"
                            android:layout_margin="0dp"
                            android:padding="0dp"
                            android:layout_gravity="center"/>




                </LinearLayout>
                            <!--Admin content-->


                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:visibility="gone"
                                    android:id="@+id/admin_content">
                                <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@drawable/white_panel"
                                        android:id="@+id/admin_income">


                                    <GridLayout
                                            android:columnCount="6"
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent">
                                        <ImageView
                                                android:layout_column="0"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:layout_margin="10dp"
                                                android:src="@drawable/ic_action_import_export_d"
                                                android:id="@+id/income_img"/>
                                        <LinearLayout
                                                android:orientation="vertical"
                                                android:layout_column="1"

                                                android:layout_columnSpan="3"
                                                android:padding="10dp"

                                                android:layout_height="fill_parent">
                                            <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                                    android:text="@string/admin_income"
                                                    android:fontFamily="sans-serif-light"

                                                    android:textStyle="normal|bold"
                                                    android:id="@+id/income_text"/>
                                            <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                                    android:text="Small Text"
                                                    android:textColor="@color/md_secondary_text_icons"
                                                    android:id="@+id/admin_income_value"/>
                                        </LinearLayout>
                                        <ImageButton
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_column="5"
                                                android:src="@drawable/ic_action_next_item"
                                                android:background="@drawable/normal_next_button"
                                                android:id="@+id/admin_income_btn"/>
                                    </GridLayout>

                                </LinearLayout>
                                <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@drawable/white_panel"
                                        android:id="@+id/admin_users">

                                    <GridLayout
                                            android:columnCount="6"
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent">
                                        <ImageView
                                                android:layout_column="0"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:layout_margin="10dp"
                                                android:src="@drawable/ic_action_cc_bcc_d"
                                                android:id="@+id/users_img"/>
                                        <LinearLayout
                                                android:orientation="vertical"
                                                android:layout_column="1"


                                                android:layout_columnSpan="3"
                                                android:padding="10dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="fill_parent">
                                            <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                                    android:text="@string/admin_users"
                                                    android:fontFamily="sans-serif-light"

                                                    android:textStyle="normal|bold"
                                                    android:id="@+id/users_text"/>
                                            <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                                    android:text="Small Text"
                                                    android:textColor="@color/md_secondary_text_icons"
                                                    android:id="@+id/admin_users_value"/>
                                        </LinearLayout>
                                        <ImageButton
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_column="5"
                                                android:src="@drawable/ic_action_next_item"
                                                android:background="@drawable/normal_next_button"
                                                android:id="@+id/admin_users_btn"/>
                                    </GridLayout>


                                </LinearLayout>
                                <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@drawable/white_panel"
                                        android:id="@+id/admin_images">


                                    <GridLayout
                                            android:columnCount="6"
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent">
                                        <ImageView
                                                android:layout_column="0"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:layout_margin="10dp"
                                                android:src="@drawable/ic_action_picture_d"
                                                android:id="@+id/images_img"/>
                                        <LinearLayout
                                                android:orientation="vertical"
                                                android:layout_column="1"

                                                android:layout_columnSpan="3"
                                                android:padding="10dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="fill_parent">
                                            <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                                    android:text="@string/admin_images"
                                                    android:fontFamily="sans-serif-light"

                                                    android:textStyle="normal|bold"
                                                    android:id="@+id/images_text"/>
                                            <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                                    android:text="Small Text"
                                                    android:textColor="@color/md_secondary_text_icons"
                                                    android:id="@+id/admin_images_value"/>
                                        </LinearLayout>
                                        <ImageButton
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_column="5"
                                                android:src="@drawable/ic_action_next_item"
                                                android:background="@drawable/normal_next_button"
                                                android:id="@+id/admin_images_btn"/>
                                    </GridLayout>


                                </LinearLayout>
                            </LinearLayout>

                            <!--User content-->

                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/users_content">

                                <!--Subscription package-->
                                <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@drawable/info_panel"
                                        android:id="@+id/inactive_sub">


                                    <GridLayout
                                            android:columnCount="6"
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent">

                                        <LinearLayout
                                                android:orientation="vertical"
                                                android:layout_column="0"

                                                android:layout_columnSpan="4"
                                                android:padding="10dp"
                                                android:layout_height="fill_parent">
                                            <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                                    android:text="@string/admin_income"
                                                    android:fontFamily="sans-serif-light"
                                                    android:textSize="20dp"
                                                    android:textStyle="normal|bold"
                                                    android:id="@+id/inactive_sub_title"/>
                                            <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                                    android:text="Small Text"
                                                    android:textSize="15dp"
                                                    android:textColor="@color/md_text_white"
                                                    android:id="@+id/inactive_sub_msg"/>
                                        </LinearLayout>
                                        <ImageButton
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_column="5"
                                                android:src="@drawable/ic_action_next_item"
                                                android:background="@drawable/normal_next_button"
                                                android:id="@+id/inactive_sub_btn"/>
                                    </GridLayout>

                                </LinearLayout>
                                <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="fill_parent"
                                        android:background="@drawable/success_panel"
                                        android:layout_height="fill_parent"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="5dp"
                                        android:id="@+id/active_sub_pack">


                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:text="@string/admin_income"
                                            android:fontFamily="sans-serif-light"
                                            android:textSize="20dp"
                                            android:textStyle="normal|bold"
                                            android:layout_marginLeft="10dp"

                                            android:id="@+id/active_sub_pack_title"/>
                                    <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent">
                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:text="Small Text"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginBottom="5dp"
                                                android:layout_marginRight="3dp"
                                                android:textSize="11dp"
                                                android:fontFamily="sans-serif-light"
                                                android:textColor="@color/md_text_white"
                                                android:id="@+id/active_sub_purch_day"/>
                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:text="Small Text"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginBottom="5dp"
                                                android:layout_marginRight="3dp"
                                                android:textSize="11dp"
                                                android:fontFamily="sans-serif-light"
                                                android:textColor="@color/md_text_white"
                                                android:id="@+id/active_sub_expi_day"/>
                                    </LinearLayout>
                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:text="Medium Text"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginBottom="5dp"
                                            android:layout_marginRight="3dp"
                                            android:fontFamily="sans-serif-light"
                                            android:id="@+id/active_sub_msg"/>
                                </LinearLayout>
                                <!--End of subscription package-->

                                <!--Credit package-->
                                <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@drawable/info_panel"
                                        android:id="@+id/inactive_crd">


                                    <GridLayout
                                            android:columnCount="6"
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent">

                                        <LinearLayout
                                                android:orientation="vertical"
                                                android:layout_column="0"

                                                android:layout_columnSpan="4"
                                                android:padding="10dp"
                                                android:layout_height="fill_parent">
                                            <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                                    android:text="@string/admin_income"
                                                    android:fontFamily="sans-serif-light"
                                                    android:textSize="20dp"
                                                    android:textStyle="normal|bold"
                                                    android:id="@+id/inactive_crd_title"/>
                                            <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                                    android:text="Small Text"
                                                    android:textSize="15dp"
                                                    android:textColor="@color/md_text_white"
                                                    android:id="@+id/inactive_crd_msg"/>
                                        </LinearLayout>
                                        <ImageButton
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_column="5"
                                                android:src="@drawable/ic_action_next_item"
                                                android:background="@drawable/normal_next_button"
                                                android:id="@+id/inactive_crd_btn"/>
                                    </GridLayout>

                                </LinearLayout>
                                <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="fill_parent"
                                        android:background="@drawable/success_panel"
                                        android:layout_height="fill_parent"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="5dp"
                                        android:id="@+id/active_crd_pack">


                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:text="@string/admin_income"
                                            android:fontFamily="sans-serif-light"
                                            android:textSize="20dp"
                                            android:textStyle="normal|bold"
                                            android:layout_marginLeft="10dp"

                                            android:id="@+id/active_crd_pack_title"/>
                                    <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent">
                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:text="Small Text"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginBottom="5dp"
                                                android:layout_marginRight="3dp"
                                                android:textSize="11dp"
                                                android:fontFamily="sans-serif-light"
                                                android:textColor="@color/md_text_white"
                                                android:id="@+id/active_crd_purch_day"/>
                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:text="Small Text"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginBottom="5dp"
                                                android:layout_marginRight="3dp"
                                                android:fontFamily="sans-serif-light"
                                                android:textSize="11dp"
                                                android:textColor="@color/md_text_white"
                                                android:id="@+id/active_crd_expi_day"/>
                                    </LinearLayout>
                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:text="Medium Text"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginBottom="5dp"
                                            android:layout_marginRight="3dp"
                                            android:fontFamily="sans-serif-light"
                                            android:id="@+id/active_crd_msg"/>
                                </LinearLayout>
                                <!--End of credit package-->

                            </LinearLayout><!--End of user content-->


                        </LinearLayout>

        </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_gravity="left"
            >
        <LinearLayout android:orientation="horizontal"
                  android:layout_width="240dp"
                  android:background="@drawable/scale"
                  android:layout_height="70dp">

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_action_user"
                    android:id="@+id/nav_user_img"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/md_text_white"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="User name"
                    android:id="@+id/nav_username"/>

            </LinearLayout>

        <ListView android:layout_width="240dp"
                  android:layout_height="match_parent"
                  android:background="@color/md_grey_900"
                  android:divider="@null"
                  android:id="@+id/drawerlist"></ListView>
    </LinearLayout>



</android.support.v4.widget.DrawerLayout>